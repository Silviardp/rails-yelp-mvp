<div class="container text-center p-5">
  <h1>Add a review for <%=@restaurant.name %></h1>
</div>

<div class="container jumbotron align-items-center">
  <%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.error_notification %>
  <%= f.input :content %>
  <%= f.input :rating, collection: Review::RATING %>
  <%= f.button :submit, class: "btn-primary" %>
  <%= link_to "Cancel", restaurants_path, class: "btn btn-outline-primary" %>
<% end %>
</div>

